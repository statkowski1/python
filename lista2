#zad7
lista = [1, 5, 3, 3.7, 7, 3.9, 2.7, 6.1, 5, 3, 7, 9, 0, 1.2, 2, 5.3]
i = 0
for x in lista:
    x = lista[i] + lista[i+1]
    print(x)
    i = i + 1
-------------------------------------------------------------------------------------------------------------------------------
#zad8
lista = []
a = 0
while a != 10:
    a = a + 1
    b = float(input('Podaj liczbe: '))
    if b % 1 == 0:
        lista.append(b)
print(lista)
-------------------------------------------------------------------------------------------------------------------------------
#zad9
lista = [1, 2, 3, 4, 5, 6]
for x in lista:
    if(x == 1)|(x == 6):
        print('O' * 6)
    else:
        print('O' + ' ' * 4 + 'O')
