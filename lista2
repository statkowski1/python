#zad1
lista_z_ulubionymi_filmami = ['film1', 'film2', 'film3', 'film4', 'film5', 'film6', 'film7']
print(lista_z_ulubionymi_filmami)
lista_z_ulubionymi_filmami.reverse()
print(lista_z_ulubionymi_filmami)
lista_z_ulubionymi_filmami.insert(5, 'film8')
lista_z_ulubionymi_filmami.insert(5, 'film9')
lista_z_ulubionymi_filmami.insert(5, 'film10')
print(lista_z_ulubionymi_filmami)
